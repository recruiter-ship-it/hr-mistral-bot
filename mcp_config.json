  "_instructions": {
    "required_secrets": {
      "GOOGLE_CLIENT_ID": "OAuth Client ID from Google Cloud Console",
      "GOOGLE_CLIENT_SECRET": "OAuth Client Secret from Google Cloud Console",
      "GOOGLE_REFRESH_TOKEN": "Obtained via OAuth flow",
      "GOOGLE_SERVICE_ACCOUNT_B64": "Service Account JSON encoded in base64",
      "GOOGLE_MAPS_API_KEY": "Google Maps API key",
      "GOOGLE_API_KEY": "General Google API key (for Translate, Vision, etc.)",
      "GOOGLE_ACCESS_TOKEN": "Optional, obtained via OAuth",
      "GOOGLE_APPLICATION_CREDENTIALS_PATH": "Path to Service Account JSON file",
      "GOOGLE_CLOUD_PROJECT": "Google Cloud Project ID",
      "GOOGLE_DEVELOPER_TOKEN": "Google Ads Developer Token",
      "YOUTUBE_API_KEY": "YouTube Data API key",
      "LOOKER_API_URL": "Looker instance URL",
      "LOOKER_CLIENT_ID": "Looker OAuth Client ID",
      "LOOKER_CLIENT_SECRET": "Looker OAuth Client Secret",
      "FIREBASE_PROJECT_ID": "Firebase Project ID"
    },
    "setup_steps": [
      "1. Go to Google Cloud Console: https://console.cloud.google.com",
      "2. Create OAuth 2.0 Credentials (Client ID & Secret)",
      "3. Enable APIs: Sheets, Drive, Calendar, Gmail, Docs, etc.",
      "4. For Service Account: Create SA, download JSON, encode to base64",
      "5. Add secrets to GitHub repository secrets or .env file"
    ],
    "encoding_service_account": "base64 -i credentials.json | tr -d '\\n'",
    "oauth_flow": "Use OAuth playground or custom script to get refresh token",
    "api_enable_links": {
      "sheets": "https://console.cloud.google.com/apis/library/sheets.googleapis.com",
      "drive": "https://console.cloud.google.com/apis/library/drive.googleapis.com",
      "calendar": "https://console.cloud.google.com/apis/library/calendar-json.googleapis.com",
      "gmail": "https://console.cloud.google.com/apis/library/gmail.googleapis.com",
      "docs": "https://console.cloud.google.com/apis/library/docs.googleapis.com",
      "maps": "https://console.cloud.google.com/apis/library/maps-backend.googleapis.com",
      "youtube": "https://console.cloud.google.com/apis/library/youtube.googleapis.com",
      "bigquery": "https://console.cloud.google.com/apis/library/bigquery.googleapis.com",
      "translate": "https://console.cloud.google.com/apis/library/translate.googleapis.com",
      "vision": "https://console.cloud.google.com/apis/library/vision.googleapis.com"
